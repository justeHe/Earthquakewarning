/* 水平间距 */
.emergency-page.data-v-0f85c3a8 {
  background: #f8f9fa;
  min-height: 100vh;
}

/* 头部样式 */
.emergency-header.data-v-0f85c3a8 {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  padding-bottom: 120rpx;
  position: relative;
  overflow: hidden;
}
.emergency-header .header-content.data-v-0f85c3a8 {
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}
.emergency-header .title.data-v-0f85c3a8 {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin: 20rpx 0 12rpx;
}
.emergency-header .subtitle.data-v-0f85c3a8 {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}
.emergency-header .header-wave.data-v-0f85c3a8 {
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  height: 80rpx;
  background: url("data:image/svg+xml;base64,");
}

/* 通用区块样式 */
.section.data-v-0f85c3a8 {
  background: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}
.section-title.data-v-0f85c3a8 {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.section-title .title-text.data-v-0f85c3a8 {
  font-size: 36rpx;
  font-weight: 600;
  margin-left: 16rpx;
}
.section-title .refresh-btn.data-v-0f85c3a8 {
  margin-left: auto;
  font-size: 26rpx;
  color: #e74c3c;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(231, 76, 60, 0.1);
}

/* 紧急联络网格 */
.contact-grid.data-v-0f85c3a8 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}
.contact-grid .contact-card.data-v-0f85c3a8 {
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}
.contact-grid .contact-card .icon-bg.data-v-0f85c3a8 {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 auto 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}
.contact-grid .contact-card .contact-name.data-v-0f85c3a8 {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.contact-grid .contact-card .contact-number.data-v-0f85c3a8 {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}
.contact-grid .contact-hover.data-v-0f85c3a8 {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(231, 76, 60, 0.15);
}
.contact-grid .medical-hover.data-v-0f85c3a8 {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(46, 204, 113, 0.15);
}

/* 救援机构列表 */
.org-list .org-card.data-v-0f85c3a8 {
  display: flex;
  padding: 32rpx;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}
.org-list .org-card.data-v-0f85c3a8:active {
  transform: scale(0.98);
}
.org-list .org-card .org-logo.data-v-0f85c3a8 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}
.org-list .org-card .org-info.data-v-0f85c3a8 {
  flex: 1;
}
.org-list .org-card .org-info .org-name.data-v-0f85c3a8 {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.org-list .org-card .org-info .org-desc.data-v-0f85c3a8 {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin: 12rpx 0;
}
.org-list .org-card .org-info .org-tag.data-v-0f85c3a8 {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.org-list .org-card .org-info .org-tag .tag.data-v-0f85c3a8 {
  padding: 6rpx 16rpx;
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 地图容器 */
.map-legend.data-v-0f85c3a8 {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.map-legend .legend-item.data-v-0f85c3a8 {
  display: flex;
  align-items: center;
  margin: 8rpx 0;
}
.map-legend .legend-item .legend-color.data-v-0f85c3a8 {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
}
.map-legend .legend-item .legend-text.data-v-0f85c3a8 {
  font-size: 24rpx;
  color: #666;
}

/* 悬浮按钮 */
.float-action.data-v-0f85c3a8 {
  position: fixed;
  left: 32rpx;
  bottom: 160rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(231, 76, 60, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(231, 76, 60, 0.3);
  transition: all 0.3s ease;
}
.float-action.data-v-0f85c3a8:active {
  transform: scale(0.9);
  opacity: 0.8;
}

