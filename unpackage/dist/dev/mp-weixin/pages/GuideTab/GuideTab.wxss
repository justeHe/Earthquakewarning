/* 水平间距 */
.guide-container.data-v-2fd15fc7 {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: env(safe-area-inset-bottom);
  position: relative;
}
.emergency-button.data-v-2fd15fc7 {
  position: fixed;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #EF4444;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.2);
  z-index: 100;
}
.emergency-button .button-text.data-v-2fd15fc7 {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
}
.animation-section.data-v-2fd15fc7 {
  background: #FFFFFF;
  padding: 32rpx;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.animation-section .guide-gif.data-v-2fd15fc7 {
  width: 100%;
  height: 300rpx;
  margin-bottom: 16rpx;
}
.animation-section .animation-tip.data-v-2fd15fc7 {
  font-size: 28rpx;
  color: #64748B;
  text-align: center;
}
.guide-content.data-v-2fd15fc7 {
  padding: 20rpx;
}
.guide-section.data-v-2fd15fc7 {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}
.guide-section .section-header.data-v-2fd15fc7 {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.guide-section .section-header .section-title.data-v-2fd15fc7 {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  margin-left: 12rpx;
}
.guide-section .section-header .custom-icon.data-v-2fd15fc7 {
  width: 48rpx;
  height: 48rpx;
  color: #F59E0B;
}
.steps-list .step-item.data-v-2fd15fc7 {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.steps-list .step-item.data-v-2fd15fc7:last-child {
  margin-bottom: 0;
}
.steps-list .step-item .step-number.data-v-2fd15fc7 {
  width: 40rpx;
  height: 40rpx;
  background: #3B82F6;
  color: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.steps-list .step-item .step-text.data-v-2fd15fc7 {
  font-size: 28rpx;
  color: #334155;
  line-height: 1.5;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
.guide-container.data-v-2fd15fc7 {
    background: #1A1A1A;
}
.animation-section.data-v-2fd15fc7,
.guide-section.data-v-2fd15fc7 {
    background: #262626;
}
.animation-section .animation-tip.data-v-2fd15fc7 {
    color: #9CA3AF;
}
.section-header .section-title.data-v-2fd15fc7 {
    color: #E5E7EB;
}
.steps-list .step-item .step-text.data-v-2fd15fc7 {
    color: #D1D5DB;
}
}