
/* 基础样式 */
.history-tab.data-v-ed885364 {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 过滤按钮样式 */
.history-filter.data-v-ed885364 {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding: 16rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.filter-btn.data-v-ed885364 {
  flex: 1;
  padding: 20rpx 0;
  background: #f1f5f9;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}
.filter-btn.data-v-ed885364::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: transparent;
  transition: all 0.3s;
}
.filter-btn.active.data-v-ed885364 {
  background: #ffffff;
  color: #1e40af;
  font-weight: 600;
}
.filter-btn.active.data-v-ed885364::after {
  background: #1e40af;
}

/* 地震条目卡片 */
.history-item.data-v-ed885364 {
  display: flex;
  flex-direction: row;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border-left: 6rpx solid;
}
.history-item.data-v-ed885364:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 根据震级设置左侧边框颜色 */
.history-item.minor.data-v-ed885364 { border-color: #4ade80;
}
.history-item.light.data-v-ed885364 { border-color: #facc15;
}
.history-item.moderate.data-v-ed885364 { border-color: #fb923c;
}
.history-item.strong.data-v-ed885364 { border-color: #f87171;
}
.history-item.major.data-v-ed885364 { border-color: #dc2626;
}

/* 震级圆圈样式 */
.history-severity.data-v-ed885364 {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}
.history-severity.minor.data-v-ed885364 {
  background: linear-gradient(135deg, #4ade80, #22c55e);
}
.history-severity.light.data-v-ed885364 {
  background: linear-gradient(135deg, #facc15, #eab308);
}
.history-severity.moderate.data-v-ed885364 {
  background: linear-gradient(135deg, #fb923c, #f97316);
}
.history-severity.strong.data-v-ed885364 {
  background: linear-gradient(135deg, #f87171, #ef4444);
}
.history-severity.major.data-v-ed885364 {
  background: linear-gradient(135deg, #dc2626, #b91c1c);
}
.magnitude.data-v-ed885364 {
  font-size: 42rpx;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}
.magnitude-label.data-v-ed885364 {
  font-size: 22rpx;
  opacity: 0.9;
  margin-top: -8rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 内容区域 */
.history-content.data-v-ed885364 {
  flex: 1;
  min-width: 0;
}
.history-title.data-v-ed885364 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.location.data-v-ed885364 {
  font-weight: 600;
  font-size: 32rpx;
  color: #1e293b;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}
.status-badge.data-v-ed885364 {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}
.status-badge.automatic.data-v-ed885364 {
  background: rgba(251, 191, 36, 0.1);
  color: #d97706;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}
.status-badge.reviewed.data-v-ed885364 {
  background: rgba(34, 197, 94, 0.1);
  color: #16a34a;
  border: 1rpx solid rgba(34, 197, 94, 0.3);
}

/* 元信息样式 */
.history-meta.data-v-ed885364 {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #475569;
}
.history-time.data-v-ed885364, .history-depth.data-v-ed885364 {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

/* 描述信息 */
.history-desc.data-v-ed885364 {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  font-size: 26rpx;
  color: #64748b;
}
.history-desc > text.data-v-ed885364 {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: #f8fafc;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

/* 状态提示样式 */
.loading-state.data-v-ed885364 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: #64748b;
  gap: 24rpx;
}
.error-state.data-v-ed885364 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #dc2626;
  gap: 24rpx;
  text-align: center;
}
.empty-state.data-v-ed885364 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: #94a3b8;
  gap: 24rpx;
}
.error-icon.data-v-ed885364, .empty-icon.data-v-ed885364 {
  font-size: 48rpx;
}
.retry-btn.data-v-ed885364 {
  margin-top: 24rpx;
  padding: 16rpx 40rpx;
  background: #1e40af;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
}

/* 响应式调整 */
@media (max-width: 750px) {
.history-item.data-v-ed885364 {
    flex-direction: column;
}
.history-severity.data-v-ed885364 {
    margin-right: 0;
    margin-bottom: 20rpx;
    align-self: center;
}
.history-meta.data-v-ed885364,
  .history-desc.data-v-ed885364 {
    flex-direction: column;
    gap: 12rpx;
}
.history-title.data-v-ed885364 {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
}
.location.data-v-ed885364 {
    margin-right: 0;
    white-space: normal;
}
.status-badge.data-v-ed885364 {
    align-self: flex-start;
}
}
.test-btn.data-v-ed885364 {
  padding: 12rpx 32rpx;
  background: linear-gradient(to right, #3b82f6, #2563eb);
  color: #fff;
  font-size: 26rpx;
  border: none;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
  transition: all 0.3s;
}
.test-btn.data-v-ed885364:active {
  transform: scale(0.96);
  opacity: 0.9;
}


/* 加载动画 */
.spinner.data-v-ed885364 {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(30, 64, 175, 0.1);
  border-radius: 50%;
  border-top-color: #1e40af;
  animation: spin-ed885364 1s linear infinite;
}
@keyframes spin-ed885364 {
to { transform: rotate(360deg);
}
}
.map-btn.data-v-ed885364 {
  background: linear-gradient(135deg, #3B82F6, #2563EB);
  color: white !important;
}
.map-btn.data-v-ed885364:active {
  opacity: 0.9;
}
