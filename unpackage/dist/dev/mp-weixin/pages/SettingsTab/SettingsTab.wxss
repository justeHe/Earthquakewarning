/* 水平间距 */
.settings-container.data-v-9bc93f33 {
  min-height: 100vh;
  background: #F8FAFC;
  padding: 20rpx 0;
}
.app-card.data-v-9bc93f33 {
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.app-card .app-info.data-v-9bc93f33 {
  display: flex;
  align-items: center;
}
.app-card .app-info .app-logo.data-v-9bc93f33 {
  width: 88rpx;
  height: 88rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
}
.app-card .app-info .app-details .app-name.data-v-9bc93f33 {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  display: block;
  margin-bottom: 4rpx;
}
.app-card .app-info .app-details .version.data-v-9bc93f33 {
  font-size: 24rpx;
  color: #64748B;
}
.settings-group.data-v-9bc93f33 {
  margin-bottom: 32rpx;
}
.settings-group .group-title.data-v-9bc93f33 {
  font-size: 28rpx;
  color: #64748B;
  padding: 0 32rpx;
  margin-bottom: 12rpx;
}
.settings-group .settings-list.data-v-9bc93f33 {
  background: #FFFFFF;
  padding: 0 32rpx;
}
.setting-item.data-v-9bc93f33 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.setting-item.no-border.data-v-9bc93f33 {
  border-bottom: none;
}
.setting-item .item-left.data-v-9bc93f33 {
  display: flex;
  align-items: center;
}
.setting-item .item-left .icon-wrapper.data-v-9bc93f33 {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.setting-item .item-left .icon-wrapper .custom-icon.data-v-9bc93f33 {
  width: 24rpx;
  height: 24rpx;
}
.setting-item .item-left .label.data-v-9bc93f33 {
  font-size: 28rpx;
  color: #1E293B;
}
.setting-item .item-right .text-value.data-v-9bc93f33 {
  display: flex;
  align-items: center;
}
.setting-item .item-right .text-value text.data-v-9bc93f33 {
  font-size: 26rpx;
  color: #64748B;
  margin-right: 8rpx;
}
.setting-item .item-right .slider-wrapper.data-v-9bc93f33 {
  width: 300rpx;
  display: flex;
  align-items: center;
}
.setting-item .item-right .slider-wrapper .slider-value.data-v-9bc93f33 {
  font-size: 24rpx;
  color: #64748B;
  margin-left: 16rpx;
  min-width: 60rpx;
}

